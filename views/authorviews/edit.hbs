<body>
  <h2 class="page-header">Edit Author</h2>
  <form action="/authors/{{author._id}}?_method=PATCH" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{author.name}}" required />
    <a class="btn btn-primary" href="/authors">Cancel</a>
    <button class="btn btn-danger" type="submit">Update</button>
  </form>
</body>