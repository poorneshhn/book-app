<body>
  <div>
    <h3>{{author.name}}</h3>
    <a class="btn btn-primary" href="/authors/{{author._id}}/edit">Edit</a>
    <form action="/authors/{{author._id}}?_method=DELETE" method="post">
      <button class="btn btn-danger" type="submit">Delete</button>
    </form>
  </div>
  <h2 class="page-header">Books by Author</h2>
  <div id="booksby- author">
    {{#if books}}
      {{#each books as |value key|}}
        <a href="/books/show/{{value._id}}">
          <img
            src="/books/images/{{value._id}}"
            alt="book cover"
            width="250"
            height="250"
          />
        </a>
        <h3>{{value.title}}</h3>
      {{/each}}
    {{else}}
      <h3>no books found from this author</h3>
    {{/if}}
  </div>
</body>