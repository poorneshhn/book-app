<div>
    <label for="name">Title</label>
    <input type="text" id="name" name="title" required>
</div>
<div>
    <label for="author">Author</label>
    <select name="author" id="author" required>
        <option label="Select..."></option>
        {{#each authors as |value key|}}
        <option label="{{value.name}}" value="{{value._id}}"></option>
        {{/each}}
    </select>
</div>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" id="pageCount" name="pageCount" min="1" required>
</div>
<div>
    <label for="coverImageTitle">Cover Image</label>
    <input type="file" id="coverImageTitle" name="cover">
</div>

<div>
    <label for="date">Publish Date</label>
    <input type="date" id="date" class="date" name="publishDate" required>
</div>
<div>
    <label for="description">Description</label>
    <textarea type="text" id="description" name="description" required></textarea>
</div>
